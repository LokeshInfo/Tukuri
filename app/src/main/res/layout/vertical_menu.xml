<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_margin="0.50dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp"
            >

            <ImageView
                android:id="@+id/idProductImage"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:src="@mipmap/app_ilogo"
                />

            <TextView
                android:id="@+id/idProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_below="@+id/idProductImage"
                android:textSize="14sp"
                android:text="1"
                android:maxLines="1"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/idProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/green"
                android:textSize="7pt"
                android:text="2"
                android:layout_below="@+id/idProductName"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/idProductMrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@drawable/strike"
                android:textSize="6pt"
                android:text="2"
                android:layout_below="@+id/idProductPrice"
                />
            <TextView
                android:id="@+id/idProductsave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="7pt"
                android:text="2"
                android:layout_below="@+id/idProductMrp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

